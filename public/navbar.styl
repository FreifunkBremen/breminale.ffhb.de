header
	position relative
	display block
	height 289px
	margin-top 45px
	margin-bottom 7px

header img.segment
	position relative
	top 0
	width 100%
	padding 0
	z-index 5

header img.ffhb
	position absolute
	z-index 10
	top 14px
	margin-top 1%
	left 0px
	margin-left 2%
	width 22%

header img.breminale
	position absolute
	z-index 10
	top 14px
	margin-top 6%
	right 0px
	margin-right 2%
	width 30%

header img.goes
	position absolute
	z-index 10
	top 14px
	margin-top 10%
	right 47%
	width 15%

@media only screen and (max-width: 767px)
	header img.breminale
		margin-top 2%
		width 50%

	header img.goes
		display none !important

#footer
	position fixed
	bottom 0px
	left 0px
	right 0px
	z-index 100
	height 34px
	opacity 0.9
	background transparent url(assets/footer.png)  top left repeat-x
	background-size auto 35px
