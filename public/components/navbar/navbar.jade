.ui.grid#navbar(ng-controller='NavbarCtrl')
	.computer.tablet.only.ui.page.grid
		.row
			.column
				.ui.menu
					a.item(href='/',ng-class='{"active":NAVBAR == "Home"}')
						i.icon.home
						| {{'Home'|translate}}
					a.item(href='/feed',ng-class='{"active":NAVBAR == "Feed"}')
						i.icon.home
						| {{'Feed'|translate}}
					a.item(href='/about',ng-class='{"active":NAVBAR == "Notification"}')
						i.icon.mail
						| {{'About'|translate}}
	.mobile.only.row
		.ui.menu.grid.page
			a.brand.item Breminale.ffhb.de
			.right.menu.open
				a.item(ng-click='showMenu=!showMenu')
					i.icon.ellipsis.vertical
		.ui.grid.page(ng-if='showMenu')
			.ui.menu.vertical
				a.item(href='/',ng-class='{"active":NAVBAR == "Home"}')
					i.icon.home
					| {{'Home'|translate}}
				a.item(href='/feed',ng-class='{"active":NAVBAR == "Feed"}')
					i.icon.home
					| {{'Feed'|translate}}
				a.item(href='/about',ng-class='{"active":NAVBAR == "Notification"}')
					i.icon.mail
					| {{'About'|translate}}
