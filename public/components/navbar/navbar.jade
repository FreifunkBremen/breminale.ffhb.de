.ui.grid#navbar(ng-controller='NavbarCtrl')
	.computer.tablet.only.ui.page.grid
		.row
			.column
				.ui.menu
					a.item(href='/',ng-class='{"active":NAVBAR == "Home"}')
						i.icon.home
						| {{'Home'|translate}}
					a.item(href='/notification',ng-class='{"active":NAVBAR == "Notification"}')
						i.icon.mail
						| {{'Notifications'|translate}}
					a.item(ng-if='!session.login',href='/login',ng-class='{"active":NAVBAR == "Login"}')
						i.icon.sign.in
						| {{'Login'|translate}}
					a.item(ng-if='session.login',ng-click='logout()',ng-class='{"active":NAVBAR == "Login"}')
						i.icon.sign.out
						| {{'Logout'|translate}}
	.mobile.only.row
		.ui.menu.grid.page
			a.brand.item Breminale.ffhb.de
			.right.menu.open
				a.item(ng-click='showMenu=!showMenu')
					i.icon.ellipsis.vertical
		.ui.grid.page(ng-if='showMenu')
			.ui.menu.vertical
				a.item(href='/',ng-class='{"active":NAVBAR == "Home"}')
					i.icon.home
					| {{'Home'|translate}}
				a.item(href='/notification',ng-class='{"active":NAVBAR == "Notification"}')
					i.icon.mail
					| {{'Notifications'|translate}}
				a.item(ng-if='!session.login',href='/login',ng-class='{"active":NAVBAR == "Login"}')
					i.icon.sign.in
					| {{'Login'|translate}}
				a.item(ng-if='session.login',ng-click='logout()',ng-class='{"active":NAVBAR == "Login"}')
					i.icon.sign.out
					| {{'Logout'|translate}}
